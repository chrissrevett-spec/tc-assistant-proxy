{
  "version": 2,
  "name": "tc-assistant-proxy",
  "public": false,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/(assistant|echo|log)",
      "headers": [
        { "key": "Access-Control-Allow-Origin",  "value": "https://www.talkingcare.uk" },
        { "key": "Vary",                         "value": "Origin" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Accept" },
        { "key": "Access-Control-Max-Age",       "value": "86400" }
      ]
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}
